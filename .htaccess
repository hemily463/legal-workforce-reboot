
Options -MultiViews
RewriteEngine On

# Handle subdirectory setup
RewriteBase /dir/

# Serve static HTML files directly
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(legal|notlegal)\.html$ - [L]

# Serve themed versions
RewriteRule ^red/?$ /dir/red/index.html [L]
RewriteRule ^blue/?$ /dir/blue/index.html [L]

# For all other requests, redirect to index.html for React routing
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /dir/index.html [QSA,L]
