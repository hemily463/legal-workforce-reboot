
Options -MultiViews
RewriteEngine On

# Serve static HTML files directly
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^(legal|notlegal)\.html$ - [L]

# Serve themed versions
RewriteRule ^red/?$ /red/index.html [L]
RewriteRule ^blue/?$ /blue/index.html [L]

# For all other requests, redirect to index.html for React routing
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.html [QSA,L]
